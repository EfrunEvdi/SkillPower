@model DtoLayer.Dtos.CourseDtos.CreateCourseDto

@{
    ViewData["Title"] = "CreateCourse";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="col-lg-12">
    <div class="white_card card_height_100 mb_30">
        <div class="white_card_header">
            <div class="box_header m-0">
                <div class="main-title">
                    <h3 class="m-0">Bootcamp Oluşturma Formu</h3>
                </div>
            </div>
        </div>
        <div class="white_card_body">
            <p class="card-subtitle mb-1">
                Sevgili Bootcamp Oluşturma Formu Katılımcısı,
            </p>
            <p class="card-subtitle mb-3">
                Sizlere kurs oluşturma formumuza hoş geldiniz demek istiyorum! Lütfen aşağıda yer alan bilgileri doldururken eksiklik olmamasına özen gösterin. Amacımız, sizin için en iyi deneyimi sağlamak ve isteklerinizi en iyi şekilde karşılamaktır. Bu nedenle, aşağıdaki bilgileri bize sunarken dikkatli olmanızı rica ederiz.
            </p>

            <form method="post">
                <div class="input-group mb-3">
                    <div class="input-group-text">
                        <span class="" id="basic-addon1">Bootcamp Görseli : </span>
                    </div>
                    <input type="text" class="form-control" placeholder="Bootcamp Görseli" asp-for="CourseImageUrl" aria-describedby="basic-addon1">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-text">
                        <span class="" id="basic-addon1">Bootcamp Adı : </span>
                    </div>
                    <input type="text" class="form-control" placeholder="Bootcamp Adı" asp-for="CourseName" aria-describedby="basic-addon1">
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-text">
                        <span class="" id="basic-addon1">Bootcamp Toplam Fiyat : </span>
                    </div>
                    <input type="text" class="form-control" placeholder="Bootcamp Toplam Ücret" asp-for="CourseTotalPrice" aria-describedby="basic-addon1">
                    <div class="input-group-text">
                        <span class="" id="basic-addon1">₺ </span>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-text">
                        <span class="" id="basic-addon1">Bootcamp Toplam Süre : </span>
                    </div>
                    <input type="text" class="form-control" placeholder="Bootcamp Toplam Süre" asp-for="CourseTotalTime" aria-describedby="basic-addon1">
                    <div class="input-group-text">
                        <span class="" id="basic-addon1">Dakika </span>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-text">
                        <span class="" id="basic-addon1">Bootcamp Açıklaması : </span>
                    </div>
                    <textarea type="text" class="form-control" placeholder="Bootcamp Açıklaması" asp-for="CourseDescription" aria-describedby="basic-addon1"></textarea>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <button type="reset" class="btn btn-outline-primary">Vazgeç</button>
                        <button id="send" type="submit" class="btn btn-outline-success">Devam Et!</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

